<view>
  <view class='user' bindtap="gotoUserinfo">
    <view class='left'>
      <image class='picture' src="{{pic}}"></image>
    </view>
    <view class='middle'>
      <view class='name'>{{nickname}}</view>
      <view class='id' catchtap="copyID">
        <text>ID: {{id}}</text>
        <text class='copy iconfont icon_copy'></text>
      </view>
    </view>
    <view class='right'>
      <text class='iconfont icon_next'></text>
    </view>
  </view>

  <view class='list'>
    <view class='divider'></view>
    <view class='item' bindtap="gotoFav">
      <text class='left'>我的收藏</text>
      <text class='right iconfont icon_next'></text>
    </view>
    <view class='divider'></view>
    <view class='item' bindtap="gotoPub">
      <text class='left'>我的发布</text>
      <text class='right iconfont icon_next'></text>
    </view>
  </view>
</view>