@import "../../../public/iconfont.wxss";
.input{
  margin-top: 50px;
  font-size: 13px;
}
.input input{
  margin-left: 10%;
  border: 1px solid black;
  border-radius: 8px;
  padding-left: 2%;
  width: 80%;
}
.input textarea{
  margin-left: 10%;
  border: 1px solid black;
  border-radius: 8px;
  padding-top: 5px;
  padding-left: 2%;
  height: 60px;
  width: 80%;
}
.input radio-group{
  display: flex;
  justify-content: space-between;
  margin-left: 18%;
  margin-right: 18%;
}
.input radio .wx-radio-input {
  border-radius: 50%; /* 圆角 */
  width: 25rpx;
  border: 2rpx solid #5e5e5f;
  height: 25rpx;
}
.input radio .wx-radio-input.wx-radio-input-checked::before {
  border-radius: 50%; /* 圆角 */
  width: 20rpx; /* 选中后对勾大小，不要超过背景的尺寸 */
  height: 20rpx; /* 选中后对勾大小，不要超过背景的尺寸 */
  line-height: 28rpx;
  text-align: center;
  font-size: 20rpx; /* 对勾大小 30rpx */
  color: #fff; /* 对勾颜色 白色 */
  background: #07c160;
  transform: translate(-50%, -50%) scale(1);
}
.input .campusSelector{
  border: 1px solid gray;
  border-radius: 5px;
  width: 40%;
  margin-left: 30%;
}
.input .campusSelector .campusValue{
  margin-left: 7%;
}
.input .campusSelector .selectorDropdown{
  float: right;
  margin-right: 3%;
}
.input .birthday{
  text-align: center;
}
.input .birthday .timeItem{
  margin-left: 2%;
  margin-right: 2%;
}
.input .birthday .selectorDropdown{
  margin-left: 2%;
}
.buttons{
  margin-top: 40px;
  text-align: center;
}
.buttons button{
  margin-right: 5%;
  margin-left: 5%;
  border-radius: 10px;
  width: 25%;
}