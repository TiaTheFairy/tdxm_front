@import "../../public/iconfont.wxss";

.cover .picture{
  width: 100%;
  height: 150px;
  margin-bottom: 15px;
}
.good .left{
  float: left;
  margin-left: 10px;
}
.good .title{
  font-size: 25px;
  margin-bottom: 5px;
}
.good .right{
  float: right;
  margin-right: 15px;
}
.good .newprice{
  font-size: 20px;
  margin-bottom: 10px;
}
.good .oldprice{
  text-decoration-line: line-through;
  text-decoration-color: rgb(230, 0, 0);
  text-decoration-thickness: 3px;
}
.desc{
  margin-top: 100px;
  text-align: center;
}
.desc .title {
  position: relative;
}
.desc .title::before,
.desc .title::after{
  content: "";
  display: block;
  height: 1px;
  background-color: #000;
  position: absolute;
  top: 50%;
  width: 25%;
}
.desc .title::before {
  margin-left: 5%;
}
.desc .title::after {
  right: 0;
  margin-right: 5%;
}
.user{
  text-align: left;
  margin-top: 5px;
  margin-left: 25px;
  display: flex;
}
.user .avatar{
  display: inline-block;
  border-radius: 50%;
  border: 1px solid gray;
  width: 50px;
  height: 50px;
}
.avatar .picture{
  display: block;
  width: 30px;
  height: 30px;
  margin-top: 10px;
  margin-left: 10px;
}
.user .username{
  font-size: 15px;
  margin-left: 20px;
  margin-top: 15px;
}
.desc .content{
  margin-left: 10%;
  margin-top: 5px;
  font-size: 13px;
  width: 80%;
}
.divider{
  width: 90%;
  height: 1px;
  background-color: rgb(3, 3, 3);
  margin-left: 5%;
  margin-top: 15px;
  margin-bottom: 8px;
}
.status{
  padding-bottom: 80px;
}
.votes{
  display: flex;
  justify-content: space-evenly;
}
.votes .like .icon{
  margin-left: 5px;
  margin-right: 5px;
}
.votes .dislike .icon{
  margin-left: 5px;
  margin-right: 5px;
}
.value, .hot{
  margin-left: 20%;
  margin-top: 10px;
}
.value .valueText, .hot .hotText{
  margin-left: 5px;
  margin-right: 10px;
}
.value .valueNum, .hot .hotNum{
  margin-right: 10px;
  color: red;
}
.value .valueRate{
  color: red;
}
.bottom{
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 30px;
  border-top: 1px solid gray;
  background-color: #fff;
  display: flex;
  justify-content: space-between;
}
.bottom .left, .bottom .middle, .bottom .right{
  margin-top: 4px;
}
.bottom .left{
  margin-left: 10px;
}
.bottom .left .commentAmount .icon{
  margin-left: 5px;
  margin-right: 5px;
}
.bottom .middle{
  position: relative;
  left: -12px;
}
.bottom .right{
  margin-right: 5px;
}
.commentPop{
  width: 100%;
  height: 50%;
  background-color: #fff;
  border-top: 1px solid gray;
  position: fixed;
  bottom: 31px;
}
.linkPop{
  width: 100%;
  height: 40%;
  background-color: #fff;
  border-top: 1px solid gray;
  position: fixed;
  bottom: 31px;
}